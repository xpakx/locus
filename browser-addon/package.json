{
  "name": "locus",
  "version": "1.0.0",
  "description": "Browser add-on for knowledge management",
  "scripts": {
    "start:chrome": "parcel watch src/manifest.json --dist-dir dist/chrome --no-hmr",
    "build:chrome": "parcel build src/manifest.json --dist-dir dist/chrome",
    "clean:chrome": "rm -rf dist/chrome",
    "package:chrome": "web-ext build --overwrite-dest --source-dir dist/chrome --filename chrome.zip"
  },
  "author": "",
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "@types/chrome": "^0.0.235",
    "@types/firefox-webext-browser": "^111.0.1",
    "parcel": "^2.8.3",
    "typescript": "^5.0.4",
    "web-ext": "^7.6.2"
  }
}
