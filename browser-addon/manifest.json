{
  "manifest_version": 2,
  "name": "Locus Communis",
  "version": "1.0",
  "description": "Knowledge management add-on",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "main.html", "style.css", "icons/*"
  ]
}

